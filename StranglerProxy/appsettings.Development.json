{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "products-route": {
        "ClusterId": "legacy-cluster",
        "Match": { "Path": "/api/products/{**catch-all}" }
      },
      "orders-route": {
        "ClusterId": "new-service-cluster", 
        "Match": { "Path": "/api/orders/{**catch-all}" }
      }
    },
    "Clusters": {
      "legacy-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5101/" }
        }
      },
      "new-service-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5102/" }
        }
      }
    }
  }
}
